<h1>Users List</h1>
<table>
    <thead>
        <th>Name</th>
        <th>Description</th>
    </thead>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.description %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: {confirm: "Are you sure."} %></td>
        </tr>
    <% end %>
</table>
<%= link_to "Home", root_path %>


